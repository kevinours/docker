{% extends 'layout.html.twig' %}

{% set adminMenu = true %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
    <h1 class="text-center">{{ block('title') }}</h1>
    {% for flashMessage in app.session.flashbag.get('success') %}
        <div class="alert alert-success">
            {{ flashMessage }}
        </div>
    {% endfor %}

    <div class="ajoutTopic">
        {{ form_start(topicForm, { 'attr': {'class': 'form-horizontal'} }) }}
            <div class="form-group">
                {{ form_label(topicForm.title, null, { 'label_attr':  {
                'class': 'col-xs-12 col-md-2 control-label'
                }}) }}
                <div class="col-xs-12 col-md-8">
                    {{ form_errors(topicForm.title) }}
                    {{ form_widget(topicForm.title, { 'attr':  {
                    'class': 'form-control'
                    }}) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(topicForm.content, null, { 'label_attr':  {
                'class': 'col-xs-12 col-md-2 control-label'
                }}) }}
                <div class="col-xs-12 col-md-8">
                    {{ form_errors(topicForm.content) }}
                    {{ form_widget(topicForm.content, { 'attr':  {
                    'class': 'form-control',
                    'rows': '8'
                    }}) }}
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-12 col-sm-offset-4 col-md-2 col-md-offset-2">
                    <input type="submit" class="btn" value="Envoyer" />
                </div>
            </div>
        {{ form_end(topicForm) }}    
    </div>
{% endblock %}