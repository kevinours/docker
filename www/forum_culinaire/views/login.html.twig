{% extends 'layout.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block content %}
    <div class="login">
        <h1 class="text-center">{{ block('title') }}</h1>
        {% if error %}
            <div class="alert alert-danger">
                <strong>Erreur lors de l'authentification</strong> {{ error }}
            </div>
        {% endif %}
        <form class="form-signin form-horizontal" role="form" action="{{ path('login_check') }}" method="post">
            <div class="row">
                <div class="col-xs-10 col-xs-offset-1 col-md-4 col-md-offset-4">
                    <input type="text" name="_username" value="{{ last_username }}" class="form-control" placeholder="Entrez votre pseudo" required autofocus>
                </div>
                <div class="col-xs-10 col-xs-offset-1 col-md-4 col-md-offset-4">
                    <input type="password" name="_password" class="form-control" placeholder="Entrez votre mot de passe" required>
                </div>
                <div class="col-xs-10 col-xs-offset-1 col-md-4 col-md-offset-4">
                    <button type="submit" class="btn">Connexion</button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}